<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="?selectableItemBackground"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Material.Item.TwoLineLayout">

  <RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/tv_block_num"
      tools:text="Two line Item"
      style="@style/TextAppearance.Material.Item.TwoLineLayout.Body1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv_type"

      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      tools:text="黑名单拦截"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </RelativeLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
      android:maxLines="1"
      android:layout_marginRight="@dimen/fab_margin"
      android:layout_marginEnd="@dimen/fab_margin"
      android:layout_weight="1"
      android:ellipsize="end"
      android:id="@+id/tv_block_loc"
      tools:text="Secondary text"
      style="@style/TextAppearance.Material.Item.TwoLineLayout.Body2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
    <TextView
      android:maxLines="1"
      android:id="@+id/tv_block_time"
      tools:text="2017/06/06"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>



</LinearLayout>