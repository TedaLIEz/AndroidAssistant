<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextAppearance" parent="TextAppearance.AppCompat"/>

  <style name="TextAppearance.Material.Item.TwoLineLayout.Body1" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">@dimen/primary_text_size</item>
  </style>
  <style name="TextAppearance.Material.Item.TwoLineLayout.Body2" parent="TextAppearance.AppCompat.Body2">
    <item name="android:textSize">@dimen/secondary_text_size</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>


  <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">

  </style>

  <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">

  </style>

  <style name="TextAppearance.Light" parent="TextAppearance.AppCompat.Title">
    <item name="android:textSize">@dimen/light_text_size</item>
  </style>


  <style name="TextAppearance.SubHead" parent="TextAppearance.AppCompat.Subhead">

  </style>



  <style name="AppTheme.Button" parent="@android:style/Widget.Holo.Button">
    <item name="background">@drawable/btn_bgd</item>

  </style>
</resources>
